@model CheckMyCode.Web.Areas.Projects.Models.EditFileViewModel
@using (Html.BeginForm("EditFile", "Project", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.FileId)
    <div class="form-group">
        @Html.TextAreaFor(m => m.FileAsString, new { id = "fileContent" })
        @Html.ValidationMessageFor(m => m.FileAsString, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Comment, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.TextAreaFor(m => m.Comment, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <input type="submit"
               value="Save" class="btn btn-default" />
        @Html.ActionLink("Back", "Files", new { id = Model.ProjectId, fileId = Model.FileId }, new { @class = "btn btn-info" })
    </div>
}

@section styles{
    @Styles.Render("~/Content/codeMirror")
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/codeMirror")
}
