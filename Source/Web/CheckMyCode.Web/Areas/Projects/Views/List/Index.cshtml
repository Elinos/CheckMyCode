@model IEnumerable<CheckMyCode.Web.Areas.Projects.Models.ListProjectsViewModel>
@{
    ViewBag.Title = "List of Projects";
}
<div class="row">
    @using (Ajax.BeginForm("Search", null,
        new AjaxOptions
        {
            UpdateTargetId = "list-results",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST"
        }, new { id = "searchForm", @class = "form-inline" }))
    {
            @Html.AntiForgeryToken()

            <div class="col-lg-2">
                @Html.EnumDropDownListFor(m => Model.First().Language, new
                {
                    @class = "form-control",
                    id = "language-dropdown",
                    name = "language",
                    onchange = "changed()"
                })
            </div>
            <div class="col-lg-8">
                <input type="text" name="searchString" oninput="changed()" class="form-control" />
                <input type="submit" value="Search" class="btn btn-info" />
            </div>

    }
</div>
<div class="row">
    <div class="col-lg-2">
        <h4>Name</h4>
    </div>
    <div class="col-lg-2">
        <h4>Language</h4>
    </div>
    <div class="col-lg-2">
        <h4>Owner</h4>
    </div>
</div>

<div id="list-results">
    @Html.Partial("_ProjectListResult", Model)
</div>

@section scripts{
    @Scripts.Render("~/bundles/common")
    <script>
        $("#language-dropdown").val('0');
    </script>
}