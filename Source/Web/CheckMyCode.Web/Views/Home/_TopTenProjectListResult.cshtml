@model IEnumerable<CheckMyCode.Web.Areas.Projects.Models.ListProjectsViewModel>
@if (Model.Count() == 0)
{
    <div class="row text-center">
        <h4>No Projects</h4>
    </div>
}
@foreach (var project in Model)
{
    <div class="row">
        <div class="row">
            <h4 class="col-lg-5 col-lg-offset-1">
                @Html.ActionLink(@project.Name, "Index", "Project", new { Area = "Projects", id = project.Id }, new { })
            </h4>
            <h5 class="col-lg-2">
                <i>@project.Language</i>
            </h5>
            <h5 class="col-lg-2">@project.OwnerUserName</h5>
        </div>
    </div>
    <hr />
}
