@model IEnumerable<CheckMyCode.Web.ViewModels.Projects.ListProjectsViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 class="text-center">Welcome to CheckMyCode!</h1>
</div>

<div class="container">
    <div class="row">
        <h2 class="col-md-6 text-center">Last 10 projects</h2>
        <h2 class="col-md-3 text-center col-lg-offset-1">By Language</h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            <hr />
            @foreach (var project in Model)
            {
                            <div class="row">
                                <div class="row">
                                    <h4 class="col-lg-5 col-lg-offset-1">
                                        <a href="#">@project.Name</a>
                                    </h4>
                                    <h5 class="col-lg-2">
                                        <i>@project.Language</i>
                                    </h5>
                                    <h5 class="col-lg-2">@project.OwnerUserName</h5>
                                </div>
                            </div>
                            <hr />
            }
        </div>
        <div class="col-md-3 col-lg-offset-1">
            <hr />
            @{
                var numList = Enum.GetValues(typeof(CheckMyCode.Data.Models.LanguageType));
            }
            @foreach (var item in numList)
            {
        <div class="row">
            <h5 class="text-center">
                @if (@item.ToString() != "Unknown")
                {
                                    @item
                }
            </h5>
        </div>
        <hr />
            }
        </div>
    </div>
</div>